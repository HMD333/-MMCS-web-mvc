@model HP.Models.Make_Appointment

@{
    ViewData["Title"] = "Edit Appointment";
}

<h1>Edit Appointment</h1>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="appointment.id" />
            <div class="form-group">
                <label asp-for="appointment.PatientHistotyid" class="control-label"></label>
                @{
                    var patient = Model.patients.FirstOrDefault(p => p.Id == Model.patient_Historie.patientID);
                    var patient_name = patient.Name;
                    var doctor = Model.doctors.FirstOrDefault(p => p.Id == Model.patient_Historie.doctorID);
                    var doctor_name = doctor.name;
                    <label class="control-label">
                        @patient_name ||| @doctor_name
                    </label>
                }
            </div>
            <div class="form-group">
                <label asp-for="appointment.Visits" class="control-label"></label>
                <input asp-for="appointment.Visits" class="form-control" />
                <span asp-validation-for="appointment.Visits" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="appointment.duration" class="control-label"></label>
                <input asp-for="appointment.duration" class="form-control" />
                <span asp-validation-for="appointment.duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="patient_Historie.Treatment_Stat" class="control-label"></label>
                    <input asp-for="patient_Historie.Treatment_Stat" />
                    <span asp-validation-for="patient_Historie.Treatment_Stat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
