@model HP.Models.Patients_Docter

@{
    ViewData["Title"] = "Patients Details";
}

<h1>Patients Details</h1>

<div>
    <h4>Patient</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.patient.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.patient.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.patient.Age)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.patient.Age)
        </dd>
    </dl>

    <h4>Histories</h4>
    <hr />
    @foreach (var i in Model.PHs)
    {
        @foreach (var ii in Model.Doctors.Where(d => d.Id == i.doctorID) )
        {
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => ii.name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => ii.name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => i.time)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => i.time)
                </dd>
            </dl>
        }
        
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.patient.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
